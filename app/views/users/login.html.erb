<div class="text-center homepage-header p-4 bg-dark">
  <div class="text-white">
    <div class="lead">
      Welcome back
    </div>

    <div class="small font-weight-light">
      Login to manage your offers and get or provide feedback.
    </div>
  </div>
</div>

<div class="bg-light p-4">
  <div class="container bg-white center-box-max-width card-shadow p-4 rounded">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>

    <%= form_for :user, url: login_path do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", placeholder: "bob@apple.com", required: "true" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", required: "true", pattern: ".{6,}" %>
         <small>
          <a href="/login">Forgot password</a>
        </small>
      </div>

      <%= invisible_recaptcha_tags text: "Login", class: "btn btn-block btn-danger" %>
    <% end %>

    <div class="mt-2 text-center">
      <div>
        <a href="/signup">Or create an account</a>
      </div>
    </div>
  </div>
</div>
