<div class="text-center homepage-header mb-3 p-4 bg-dark">
	<div class="text-white">
		<div class="lead">
			Unleash feedback
		</div>
		
		<div class="small font-weight-light">
			Creating an account will allow you to post offers and provide feedback.
		</div>
	</div>
</div>

<div class="container mt-4 mb-4 clearfix center-box-max-width border p-4 rounded">
	<form action="/login" method="POST">
		<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

	  <div class="form-group">
	 		<div class="form-group">
	  		<label for="email">Work email</label>
		    <input name="email" type="email" class="form-control" id="email"  placeholder="bob@apple.com"/>
		    <small id="emailHelp" class="form-text text-muted">Using your work email will unlock offers from your company.</small>
			</div>
			
		  <div class="form-group">
	  		<label for="password">Password</label>
		    <input name="password" type="password" class="form-control" id="password" placeholder="••••••"/>
			</div> 

			<div class="form-group">
	  		<label for="password_confirmation">Password confirmation</label>
		    <input name="password_confirmation" type="password" class="form-control" id="password_confirmation" placeholder="••••••"/>
			</div>
		</div>
	  
	  <button type="submit" class="btn btn-block btn-danger">Create an account</button>

	  <div class="mt-2">
	  	<div>
	  		Already a user? <a href="/login">Login here</a>
	  	</div>
	  </div>
	</form>
</div>