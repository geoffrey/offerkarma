<div class="text-center homepage-header p-4 bg-dark">
  <div class="text-white">
    <div class="mb-2 lead">
      New job offer evaluation
    </div>

    <div class="font-weight-light">
      Now, let's talk about cash!
    </div>
  </div>
</div>

<div class="bg-light p-4">
  <div class="center-box-max-width">
    <div class="progress mb-4">
      <div class="progress-bar bg-danger" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>

  <div class="center-box-max-width bg-white card-shadow rounded p-4">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :base_salary do %>
            Base salary <span class="text-danger">*</span>
          <% end %>
          <%= f.text_field :base_salary, class: "form-control", placeholder: "$100,000", required: "true", autocomplete: "off" %>
        </div>
      </div>

      <div class="col-md-6">
        <%= f.label :bonus_per_year_percent do %>
          Target bonus per year <span class="small text-ghost">optional</span>
        <% end %>
        <div class="input-group mb-3">
          <%= f.number_field :bonus_per_year_percent, max: 100, class: "form-control", placeholder: "0" %>
          <div class="input-group-append">
            <span class="input-group-text" id="offer_bonus_per_year_percent">%</span>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :signon_bonus do %>
            Sign-on bonus <span class="small text-ghost">optional</span>
          <% end %>
          <%= f.text_field :signon_bonus, class: "form-control", placeholder: "$0", autocomplete: "off" %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :relocation_package do %>
            Relocation package <span class="small text-ghost">optional</span>
          <% end %>
          <%= f.text_field :relocation_package, class: "form-control", placeholder: "$0", autocomplete: "off" %>
        </div>
      </div>
    </div>
    <%= f.submit "Next", class: "btn btn-block btn-danger" %>
    <%= f.submit "Back", name: "back_button", class: "btn btn-sm btn-block btn-link" %>
  </div>
</div>

<script type="text/javascript">
  $(function() {
    Reffo.setCurrencyMask('#offer_base_salary')
    Reffo.setCurrencyMask('#offer_relocation_package')
    Reffo.setCurrencyMask('#offer_signon_bonus')
  })
</script>

