<div class="text-center homepage-header p-4 bg-dark">
  <div class="text-white">
    <div class="mb-2 lead">
      New <span class="bg-white text-danger font-weight-bold p-1">offerâ†µ</span>
    </div>

    <div class="font-weight-light">
      I assume you are getting equity?
    </div>
  </div>
</div>

<div class="bg-light p-4">
  <div class="center-box-max-width">
    <div class="progress mb-4">
      <div class="progress-bar bg-danger" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>

  <div class="center-box-max-width bg-white card-shadow rounded p-4">
    <%= form_for(@offer, url: offers_path) do |f| %>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :stock_type do %>
              What type? <span class="small text-ghost">optional</span>
            <% end %>
            <%= f.select :stock_type, Offer.stock_types.to_a.map { |t| [t.first.humanize, t.first] }, { include_blank: "Select...", selected: @offer.stocks_liquid? ? "rsus" : "options", disabled: "" }, class: "form-control", disabled: @offer.stocks_liquid? %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :stock_count do %>
              How many units? <span class="small text-ghost">optional</span>
            <% end %>
            <%= f.number_field :stock_count, class: "form-control", placeholder: "5,000" %>
          </div>
        </div>
      </div>

      <div class="row">

        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :stock_strike_price do %>
              Strike price <span class="small text-ghost">optional</span>
            <% end %>
            <%= f.number_field :stock_strike_price, class: "form-control", placeholder: "0.22", step: :any, value: @offer.stocks_liquid? ? '' : '', readonly: @offer.stocks_liquid? %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :stock_fair_market_value do %>
              Current fair market value <span class="small text-ghost">optional</span>
            <% end %>
            <%= f.number_field :stock_fair_market_value, class: "form-control", placeholder: "1.92", step: :any, value: @offer.company.quote, readonly: @offer.stocks_liquid? %>
            <% if @offer.company.quote %>
              <small class="form-text text-muted"><%= @offer.company.display_name %> (<a href="<%= @offer.company.yahoo_finance_url %>" target="_blank">$<%= @offer.company.symbol %></a>) is publicly traded.</small>
            <% end %>
          </div>
        </div>
      </div>

      <% if @offer.stocks_liquid? %>
        <%= f.hidden_field :stock_type, value: "rsus" %>
      <% end %>

      <%= f.submit "Next", class: "btn btn-block btn-danger" %>
      <%= f.submit "Back", name: "back_button", class: "btn btn-sm btn-block btn-link" %>

    <% end %>
  </div>
</div>

