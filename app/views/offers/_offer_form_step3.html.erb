<div class="text-center homepage-header p-4 bg-dark">
  <div class="text-white">
    <div class="mb-2 lead">
      New <span class="bg-white text-danger font-weight-bold p-1">offerâ†µ</span>
    </div>

    <div class="font-weight-light">
      Will you have any equity?
    </div>
  </div>
</div>

<div class="bg-light p-4">
  <div class="center-box-max-width">
    <div class="progress mb-4">
      <div class="progress-bar bg-danger" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>

  <div class="container center-box-max-width bg-white border rounded p-4">
    <%= form_for(@offer, url: offers_path) do |f| %>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :stock_type do %>
              What type? <span class="small text-muted">optional</span>
            <% end %>
            <%= f.select :stock_type, Offer.stock_types.keys.map { |t| [t.humanize, t] }, { include_blank: "Select...", selected: "", disabled: "" }, class: "form-control" %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :bonus_per_year_percent do %>
              How many units? <span class="small text-muted">optional</span>
            <% end %>
            <%= f.text_field :bonus_per_year_percent, class: "form-control", placeholder: "5,000" %>
          </div>
        </div>
      </div>

      <%= f.submit "Next >", class: "btn btn-block btn-danger" %>
    <% end %>
  </div>
</div>
