<div class="text-center homepage-header p-4 bg-dark">
  <div class="text-white">
    <div class="mb-2 lead">
      New job offer evaluation
    </div>

    <div class="font-weight-light">
      Let's start with the position.
    </div>
  </div>
</div>

<div class="bg-light p-4">
  <div class="center-box-max-width">
    <div class="progress mb-4">
      <div class="progress-bar bg-danger" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>

  <div class="center-box-max-width bg-white card-shadow rounded p-4">
    <div class="row">
      <div class="col">
        <div class="form-group">

          <%= f.label :company_name do %>
            Company name <span class="text-danger">*</span>
          <% end %>
          <%= f.text_field :company_name, value: (@offer.company&.name || @offer.company_name || params[:company_name])&.humanize, class: "form-control", placeholder: "Google", required: "true", autocomplete: "off" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :location do %>
            Location <span class="text-danger">*</span>
          <% end %>
          <%= f.text_field :location, class: "form-control", placeholder: "San Francisco", required: "true", autocomplete: "off" %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :position do %>
            Position <span class="text-danger">*</span>
          <% end %>
          <%= f.text_field :position, class: "form-control", placeholder: "Software Engineer", required: "true", autocomplete: "off" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :level do %>
            Level <span class="small text-ghost">optional</span>
          <% end %>
          <%= f.text_field :level, class: "form-control", placeholder: "L5" %>
        </div>
      </div>

      <div class="col-md-6">
        <%= f.label :yoe do %>
          Years of experience <span class="small text-ghost">optional</span>
        <% end %>
        <div class="input-group mb-3">
          <%= f.number_field :yoe, class: "form-control", placeholder: "4" %>
          <div class="input-group-append">
            <span class="input-group-text" id="offer_yoe">year(s)</span>
          </div>
        </div>
      </div>
    </div>

    <%= f.submit "Next >", class: "btn btn-block btn-danger" %>
  </div>
</div>

<script type="text/javascript">
  $(function() {
    Reffo.setCompanyNameAutocomplete('#offer_company_name')
  })
</script>
