<% if @offer.user == current_user %>
  <div class="p-2 text-center alert alert-warning mb-0">
    <div class="center-box-max-width d-flex">
      <div class="mr-auto">
        <a class="btn btn-outline-secondary" href="<%= edit_offer_path @offer.uuid %>">Edit</a>
      </div>
      <div>
        <% unless @offer.pending? %>
          <%= link_to offer_path(@offer.uuid, offer: { status: :pending }), class: "btn btn-info", method: :put do %>
            Pending
          <% end %>
        <% end %>
        <% unless @offer.declined? %>
          <%= link_to offer_path(@offer.uuid, offer: { status: :declined }), class: "btn btn-danger", method: :put do %>
            Declined
          <% end %>
        <% end %>
        <% unless @offer.accepted? %>
          <%= link_to offer_path(@offer.uuid, offer: { status: :accepted }), class: "btn btn-success", method: :put do %>
            Accepted
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div class="text-center company-header p-4 bg-<%= @offer.status_class %>">
  <div class="text-white font-weight-light mb-3">
    <h5><%= @offer.position %></h5>
    <h6><%= @offer.level %> <% if @offer.level && @offer.yoe %> - <% end %><%= @offer.yoe ? "#{@offer.yoe.to_i} yoe" : "" %></h6>
  </div>

  <div class="mb-1">
    <a href="<%= company_path @offer.company.uuid %>" class="text-white"><img width="50px" class="img-thumbnail rounded" src="//logo.clearbit.com/<%= @offer.company.domain %>"></a>
  </div>

  <h6 class="mb-3 text-white font-weight-light"><a href="<%= company_path @offer.company.uuid %>" class="text-white"><%= @offer.company.name %></a></h6>

  <hr>
  <div class="small text-white font-weight-bold text-uppercase">
    <%= @offer.status %>
  </div>

  <div class="small text-light font-weight-light">
    added <%= time_ago_in_words @offer.created_at %> ago
  </div>
</div>

<div class="text-center border-bottom p-2">
  <div>
    <span class="mr-4 text-info">
      <span class="far fa-eye"></span> <%= @offer.views %>
    </span>

    <span class="mr-4 text-success">
      <span class="far fa-thumbs-up"></span> <span id="upvote-count"><%= @offer.votes.up.count %></span>
    </span>

    <span class="mr-4 text-danger">
      <span class="far fa-thumbs-down"></span> <span id="downvote-count"><%= @offer.votes.down.count %></span>
    </span>

    <span>
      <span class="fa fa-comments"></span> <%= @offer.comments.count %>
    </span>
  </div>
</div>

<div class="border-bottom p-3 bg-light">
  <div class="center-box-max-width">
    <div class="row">
      <div class="col-12 mb-2 mb-md-3">
        <div class="col-12 text-center border bg-white p-2">
          <div class="font-weight-light mb-1">Total Compensation</div>
          <div class="lead font-weight-bold" title="<%= @offer.tc %>">$<%= number_to_human @offer.tc %> / year</div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12 mb-2 mb-md-3">
        <div class="col-12 text-center border bg-white p-2">
          <div class="font-weight-light mb-1">Base salary <span class="money-bill ml-1 text-muted"></span></div>
          <div class="lead font-weight-normal" title="<%= @offer.base_salary %>">$<%= number_to_human @offer.base_salary %> / year</div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-md-6 mb-2 mb-md-3">
        <div class="col-12 text-center border height-100 bg-white p-2 <%= @offer.relocation_package.to_i.zero? ? 'disabled' : '' %>">
          <div class="font-weight-light mb-1">Relocation package</div>
          <div class="lead font-weight-normal" title="<%= @offer.relocation_package %>">$<%= number_to_human @offer.relocation_package.to_i %></div>
        </div>
      </div>

      <div class="col-12 col-md-6 mb-2 mb-md-3">
        <div class="col-12 text-center border height-100 bg-white p-2 <%= @offer.signon_bonus.to_i.zero? ? 'disabled' : '' %>">
          <div class="font-weight-light mb-1">Signon Bonus</div>
          <div class="lead font-weight-normal"  title="<%= @offer.signon_bonus %>">$<%= number_to_human @offer.signon_bonus.to_i %></div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-md-6 mb-2 mb-md-3">
        <div class="col-12 text-center border height-100 bg-white p-2 <%= @offer.stocks_profit_per_year.to_i.zero? ? 'disabled' : '' %>">
          <div class="font-weight-light mb-1">Stocks (<%= @offer.stock_type.humanize %>)</div>
          <div class="lead font-weight-normal" title="<%= @offer.stocks_profit_per_year %>">$<%= number_to_human @offer.stocks_profit_per_year %> / year</div>
          <% if @offer.stocks_liquid? %>
            <span class="badge badge-success">liquid</span>
          <% else %>
            <span class="badge badge-warning">not liquid</span>
          <% end %>
<!--
          <% if @offer.stock_count %>
            <div class="small">
              <%= number_with_delimiter  @offer.stock_count, delimiter: ","%> units over 4 years
            </div>
          <% end %> -->
        </div>
      </div>

      <div class="col-12 col-md-6 mb-2 mb-md-3">
        <div class="col-12 text-center border height-100 bg-white p-2 <%= @offer.bonus_per_year_percent.to_i.zero? ? 'disabled' : '' %>">
          <div class="font-weight-light">Bonus</div>
          <div class="lead font-weight-normal">$<%= number_to_human @offer.bonus_value_per_year %> / year</div>
          <% if @offer.bonus_per_year_percent %>
            <div class="small text-muted">
              <%= @offer.bonus_per_year_percent %>% of $<%= number_to_human @offer.base_salary %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <% if @offer.notes.present? %>
      <div class="bg-light">
        <div class="center-box-max-width bg-white border p-3 text-align-justity">
          <div class="font-weight-light text-center">Notes</div>
          <div>
            <%= @offer.notes %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="p-3 border-bottom">
  <div class="center-box-max-width">
    <div>
      <div class="d-flex">
        <div class="flex-even pr-2">
          <%= link_to votes_offer_path(@offer.uuid, vote: 1), class: "vote btn btn-block #{ current_user.upvoted?(@offer) ? 'btn-success disabled' : 'btn-outline-success' }", method: :post do %>
            <span class="fa fa-thumbs-up"></span> Nice!
          <% end %>
        </div>
        <div class="flex-even pl-2">
          <%= link_to votes_offer_path(@offer.uuid, vote: -1), class: "vote btn  btn-block #{ current_user.downvoted?(@offer) ? 'btn-danger disabled' : 'btn-outline-danger' }", method: :post do %>
            <span class="fa fa-thumbs-down"></span> Meh...
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="p-3 border-bottom">
  <div class="center-box-max-width">
    <div class="text-center mb-3"><%= @offer.comments.count %> Comments</div>

    <div class="mb-4">
      <% @offer.comments.each do |comment| %>
        <div class="bg-light p-3 border-bottom mb-2">
          <div class="small d-flex justify-content-between">
            <div>
              <a href="<%= company_path comment.user.current_company.uuid %>"><%= comment.user.current_company.name %></a> - <%= comment.user.username %> <sup class="font-weight-bold text-danger"><%= @offer.user.id == comment.user.id ? "OP" : "" %></sup>
            </div>

            <div>
              <span class="text-muted" title="<%= comment.created_at.strftime('%m/%d/%Y - %r') %>">
                <%= time_ago_in_words comment.created_at %> ago
              </span>
            </div>
          </div>
          <div>
            <%= comment.text %>
          </div>
        </div>
      <% end %>
    </div>

    <div>
      <%= form_for :comment, url: comments_offer_path do |f| %>
        <div class="form-group">
          <%= f.text_area :text, class: "form-control", placeholder: "Add a new comment...", required: "true", rows: "5" %>
        </div>
        <%= f.submit "Comment", class: "btn btn-block btn-danger" %>
      <% end %>
    </div>
  </div>
</div>
