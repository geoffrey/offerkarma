<div class="text-center company-header p-4 bg-<%= @offer.status_class %>">
  <div class="text-white font-weight-light mb-3">
    <h5><%= @offer.position %></h5>
    <h6><span class="fa fa-map-marker-alt"></span> <%= @offer.location %> </h6>
    <h6><%= @offer.level %> <%= @offer.yoe ? "(#{@offer.yoe.to_i} YOE)" : "" %></h6>
  </div>

  <div>
    <div class="mb-1">
      <a href="<%= company_path @offer.company.uuid %>" class="text-white"><img width="50px" class="rounded" src="<%= @offer.company.logo_url %>"></a>
    </div>

    <h6 class="mb-3 text-white font-weight-light"><a href="<%= company_path @offer.company.uuid %>" class="text-white"><%= @offer.company.name %></a></h6>
  </div>

  <hr/>

  <div>
    <div class="small text-white font-weight-bold text-uppercase">
      <%= @offer.status %>
    </div>

    <div class="small text-light font-weight-light">
      added <%= time_ago_in_words @offer.created_at %> ago
    </div>
  </div>
</div>

<div class="text-center border-bottom p-2">
  <div>
    <span class="mr-4 text-info">
      <span class="far fa-eye"></span> <%= @offer.views %>
    </span>

    <span class="mr-4 text-success">
      <span class="far fa-thumbs-up"></span> <span id="upvote-count"><%= @offer.votes.up.count %></span>
    </span>

    <span class="mr-4 text-danger">
      <span class="far fa-thumbs-down"></span> <span id="downvote-count"><%= @offer.votes.down.count %></span>
    </span>

    <span>
      <span class="fa fa-comments"></span> <%= @comments.count %>
    </span>
  </div>
</div>

<div class="border-bottom p-3 bg-light">
  <div class="center-box-max-width">
    <div class="mb-3 sharethis-inline-share-buttons"></div>

    <div class="row">
      <div class="col-12 mb-3 mb-md-3">
        <div class="text-center card-shadow rounded bg-white p-2 p-md-3">
          <div class="font-weight-light mb-1">Total Compensation (TC)</div>
          <div class="lead font-weight-bold" title="<%= @offer.tc %>">$<%= number_to_human @offer.tc %> / year</div>
          <% if @offer.signon_bonus || @offer.relocation_package %>
            <mark title="included signon and relocation bonuses">$<%= number_to_human @offer.tc_year_1 %> for year 1</mark>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12 mb-3 mb-md-3">
        <div class="text-center card-shadow rounded bg-white p-2 p-md-3">
          <div class="font-weight-light mb-1">Base salary <span class="money-bill ml-1 text-muted"></span></div>
          <div class="lead font-weight-normal" title="<%= @offer.base_salary %>">$<%= number_to_human @offer.base_salary %> / year</div>
        </div>
      </div>
    </div>

    <div class="row">
      <% if @offer.stocks_profit_per_year.to_i.positive? %>
        <div class="col-12 col-md-6 mb-3 mb-md-3">
          <div class="text-center card-shadow rounded height-100 bg-white p-2 p-md-3">
            <div class="font-weight-light mb-1">Stocks (<%= @offer.stock_type.humanize %>)</div>
            <div class="lead font-weight-normal" title="<%= @offer.stocks_profit_per_year %>">$<%= number_to_human @offer.stocks_profit_per_year %> / year</div>
            <div class="small text-muted">
              Vesting: <%= @offer.vesting_schedule_display %>
            </div>
            <% if  @offer.stocks_profit_per_year.to_i.positive? %>
              <% if @offer.stocks_liquid? %>
                <small>
                  <span class="badge badge-success">LIQUID</span>
                  <span>
                    <a href="<%= @offer.company.yahoo_finance_url %>" target="_blank">(<%= @offer.company.symbol.upcase %> $<%= @offer.company.quote %>)</a>
                  </span>
                </small>
              <% else %>
                <small>
                  <span class="badge badge-info">MIGHT BE LIQUID</span>
                  <span>
                    <a href="/equity#secondary" target="_blank" title="Learn about secondary market">
                      Learn more
                    </a>
                  </span>
                </small>
              <% end %>
            <% end %>
  <!--
            <% if @offer.stock_count %>
              <div class="small">
                <%= number_with_delimiter  @offer.stock_count, delimiter: ","%> units over 4 years
              </div>
            <% end %> -->
          </div>
        </div>
      <% end %>

      <% if @offer.bonus_per_year_percent.to_i.positive? %>
        <div class="col-12 col-md-6 mb-3 mb-md-3">
          <div class="text-center card-shadow rounded height-100 bg-white p-2 p-md-3">
            <div class="font-weight-light">Bonus</div>
            <div class="lead font-weight-normal">$<%= number_to_human @offer.bonus_value_per_year %> / year</div>
            <% if @offer.bonus_per_year_percent %>
              <div class="small text-muted">
                <%= @offer.bonus_per_year_percent %>% of $<%= number_to_human @offer.base_salary %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @offer.relocation_package.to_i.positive? %>
        <div class="col-12 col-md-6 mb-3 mb-md-3">
          <div class="text-center card-shadow rounded height-100 bg-white p-2 p-md-3">
            <div class="font-weight-light mb-1">Relocation package</div>
            <div class="lead font-weight-normal" title="<%= @offer.relocation_package %>">$<%= number_to_human @offer.relocation_package.to_i %></div>
          </div>
        </div>
      <% end %>

      <% if @offer.signon_bonus.to_i.positive? %>
        <div class="col-12 col-md-6 mb-3 mb-md-3">
          <div class="text-center card-shadow rounded height-100 bg-white p-2 p-md-3">
            <div class="font-weight-light mb-1">Signon Bonus</div>
            <div class="lead font-weight-normal"  title="<%= @offer.signon_bonus %>">$<%= number_to_human @offer.signon_bonus.to_i %></div>
          </div>
        </div>
      <% end %>
    </div>

    <% if @offer.notes.present? %>
      <div class="bg-light">
        <div class="center-box-max-width bg-white card-shadow rounded p-3 text-align-justity">
          <div class="font-weight-light mb-1 text-center">Notes from OP</div>
          <div>
            <%= @offer.notes %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="p-3 border-bottom">
  <div class="center-box-max-width">
    <div>
      <% if current_user %>
        <div class="d-flex">
          <div class="flex-even pr-2">
            <%= link_to votes_offer_path(@offer.uuid, vote: :up), class: "vote btn btn-block #{ current_user&.upvoted?(@offer) ? 'btn-success disabled' : 'btn-outline-success' }", method: :post do %>
              <span class="fa fa-thumbs-up"></span> Nice! (<%= @offer.upvotes.count %>)
            <% end %>
          </div>
          <div class="flex-even pl-2">
            <%= link_to votes_offer_path(@offer.uuid, vote: :down), class: "vote btn  btn-block #{ current_user&.downvoted?(@offer) ? 'btn-danger disabled' : 'btn-outline-danger' }", method: :post do %>
              <span class="fa fa-thumbs-down"></span> Meh... (<%= @offer.downvotes.count %>)
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="text-center">
          <a class="btn btn-outline-danger" href="<%= login_path %>">Login now to vote on this offer</a>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="p-3 border-bottom">
  <div class="center-box-max-width">
    <div class="text-center mb-3">
      <% if @comments.none? %>
        There are no comments yet. Be the first one:
      <% else %>
        <%= pluralize@comments.count, "Comment" %>
      <% end %>
    </div>

    <div class="mb-4">
      <% @comments.each do |comment| %>
        <div class="bg-light p-3 border-bottom mb-2">
          <div class="small d-flex justify-content-between">
            <div>
              <% if comment.user.current_company %>
                <a href="<%= company_path comment.user.current_company.uuid %>">
                  <%= comment.user.current_company.name %>
                </a>
              <% else %>
                New
              <% end %>
              - <%= comment.user.username %> <sup class="font-weight-bold text-danger"><%= @offer.user.id == comment.user.id ? "OP" : "" %></sup>
            </div>

            <div>
              <span class="text-muted" title="<%= comment.created_at.strftime('%m/%d/%Y - %r') %>">
                <%= time_ago_in_words comment.created_at %> ago
              </span>
            </div>
          </div>
          <div>
            <%= comment.text %>
          </div>
        </div>
      <% end %>
    </div>

    <% if current_user %>
      <div id="comment">
        <%= form_for :comment, url: comments_offer_path do |f| %>
          <div class="form-group">
            <%= f.text_area :text, class: "form-control", placeholder: "Add your feedback...", required: "true", rows: "5" %>
          </div>
          <%= f.submit "Post", class: "btn btn-block btn-danger" %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center">
        <a class="btn btn-danger" href="<%= login_path %>">Login to give feedback on this offer</a>
      </div>
    <% end %>
  </div>
</div>
