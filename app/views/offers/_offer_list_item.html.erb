<div class="">
	<div class="p-3 d-flex flex-row">
		<div class="mr-2">
			<div class="text-center mb-1">
				<b><%= offer.company.name %></b>
			</div>
			<div class="w-50">
				<img class="img-thumbnail rounded" src="//logo.clearbit.com/<%= offer.company.url %>">
			</div>
		</div>

		<div>
			<div class="mb-3">
				<div class="border rounded p-2">
					<b><%= number_to_currency offer.tc, precision: 0 %>/year</b> TC
				</div>

				<% if offer.base_salary %>
					<div>
						<b><%= number_to_currency offer.base_salary, precision: 0 %></b> base
					</div>
				<% end %>

				<% if offer.signon_bonus %>
					<div>
						Signon bonus <b><%= number_to_currency offer.signon_bonus, precision: 0 %></b>
					</div>
				<% end %>	
			</div>
		</div>
	
	</div>

	<div class="border-top text-center p-2">
		<span class="mr-4">
			<span class="far fa-eye"></span> <span class="small"><%= offer.views %></span>
		</span>
				
		<span class="mr-2">
			<span class="far fa-thumbs-up"></span> <span class="small"><%= offer.votes.up.count %></span>
		</span>

		<span class="mr-4">
			<span class="far fa-thumbs-down"></span> <span class="error small"><%= offer.votes.down.count %></span>
		</span>

		<span>
			<span class="fa fa-comments text-muted"></span> <%= offer.comments.count %>
		</span>
	</div>	
			
</div>