<div class="text-center homepage-header p-4 bg-dark">
  <div class="text-white">
    <div class="mb-2 lead">
      New <span class="bg-white text-danger font-weight-bold p-1">offerâ†µ</span>
    </div>

    <div class="font-weight-light">
      Finally, anything else to add?
    </div>
  </div>
</div>

<div class="bg-light p-4">
  <div class="center-box-max-width">
    <div class="progress mb-4">
      <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>

  <div class="container center-box-max-width bg-white border rounded p-4">
    <%= form_for(@offer, url: offers_path) do |f| %>

      <div class="form-group">
        <%= f.label :notes do %>
          Notes <span class="small text-muted">optional</span>
        <% end %>
        <%= f.text_area :notes, class: "form-control", placeholder: "I do/don't like the team... I think the mission of the company is/isn't interesting to me because...", autocomplete: "off", rows: "5" %>
      </div>

      <%= f.submit "Submit", class: "btn btn-block btn-danger" %>
      <%= f.submit "Back", name: "back_button", class: "btn btn-sm btn-block btn-link" %>

      <small class="text-muted">By submitting this form, our members will be able to comment and vote on your offer.</small>

    <% end %>
  </div>
</div>
