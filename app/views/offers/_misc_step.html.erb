<div class="text-center homepage-header p-4 bg-dark">
  <div class="text-white">
    <div class="mb-2 lead">
      New job offer evaluation
    </div>

    <div class="font-weight-light">
      Finally, anything else to add?
    </div>
  </div>
</div>

<div class="bg-light p-4">
  <div class="center-box-max-width">
    <div class="progress mb-4">
      <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>

  <div class="center-box-max-width bg-white card-shadow rounded p-4">
    <%= form_for(@offer, url: offers_path) do |f| %>

      <div class="form-group">
        <%= f.label :notes do %>
          Notes <span class="small text-ghost">optional</span>
        <% end %>
        <%= f.text_area :notes, class: "form-control", placeholder: "Tell us about your current TC or anything else you'd like to add about this offer, #{@offer.company.display_name} or the team within #{@offer.company.display_name}...", autocomplete: "off", rows: "5" %>
      </div>


      <%= f.submit "Submit", class: "btn btn-block btn-danger" %>
      <small class="form-text text-muted">By submitting this form, you agree to publish your offer to our community for feedback.</small>
      <%= f.submit "Back", name: "back_button", class: "btn btn-sm btn-block btn-link" %>
    <% end %>
  </div>
</div>
