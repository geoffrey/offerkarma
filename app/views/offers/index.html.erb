<div class="text-center homepage-header p-4 bg-dark">
  <div class="mb-4 lead">
    <span class="bg-white p-2 font-weight-bold">Need feedback on a job <span class="text-danger">offer</span>?</span>
  </div>
  <div>
    <a class="btn btn-danger" href="<%= new_offer_path %>">Evaluate my offer</a>
  </div>
</div>

<div class="bg-light p-3 border-bottom">
  <div class="container p-2">
    <div class="center-box-max-width mb-3">
      <div class="bg-white p-3 border rounded">
        <div class="text-center font-weight-bold">Filters</div>

        <div class="form-inline">
          <%= label_tag :status, "Status:", class: "mr-3" %>
          <%= select_tag(:status, options_for_select(["All", *Offer.statuses.keys.map(&:humanize)], params[:status] || "All"), class: "form-control") %>

        </div>
      </div>
    </div>
  <!--     <div class="text-center">
    </div>
      <form class="m-auto form-inline">
        <div class="form-group mr-3 mb-2">
          <input type="text" class="form-control" id="company" placeholder="Company...">
        </div>
        <button type="submit" class="btn btn-danger mb-2">Search</button>
      </form>
    </div>

    <hr/> -->

    <% if @offers.any? %>
      <div class="row">
        <% @offers.each do |offer| %>
          <%= render partial: "offer_list_item", locals: { offer: offer } %>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white p-3 text-center text-muted">
        No offers found.
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $("#status").on('change', function() {
      window.location = `/offers?status=${$(this).val()}`
    });
  });
</script>
