<div class="container mt-4">
	<div class="progress mb-3">
	  <div class="progress-bar bg-success" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
	</div>

	<div class="text-center lead mb-3">Which company?</div>

	<div>
		<form>
		  <div class="form-group">
		  	<div class="ui-widget">
			    <input type="text" class="form-control" id="company" aria-describedby="company" placeholder="Company name..." autofocus/>
			  </div>
			 </div>
		  <button type="submit" class="btn btn-primary">Next</button>
		</form>
	</div>
</div>

<script type="text/javascript">
	$('#company').autocomplete({
    minLength: 2,
    source: function(request, response) {
    	url = 'https://autocomplete.clearbit.com/v1/companies/suggest'
    	query = { query: request.term }
      $.getJSON(url, query, response);
    },
    select: function( event, ui ) {
    	console.log(ui.item.name)
    	$('#company').val("" + ui.item.name)
    },
  }).autocomplete( 'instance' )._renderItem = function( ul, item ) {
    return $( '<li>' ).append( '<div>' + item.name + ' - ' + item.domain + '</div>' ).appendTo( ul );
  };

</script>