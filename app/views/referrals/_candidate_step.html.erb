<div class="text-center homepage-header p-4 bg-dark">
  <div class="text-white">
    <div class="mb-2 lead">
      Request a referral
    </div>
    <div class="font-weight-light">
      Finally, who are you?
    </div>
  </div>
</div>
<div class="bg-light p-4">
  <div class="center-box-max-width">
    <div class="progress mb-4">
      <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>

  <div class="center-box-max-width bg-white card-shadow rounded p-4">
    <div class="row">
      <div class="col">
        <div class="form-group">
          <%= f.label :email do %>
            Your email address <span class="text-danger">*</span>
          <% end %>
          <%= f.text_field :email, value: current_user.email, class: "form-control", placeholder: "john.smith@yahoo.com", required: "true", autocomplete: "off" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="form-group">
          <%= f.label :linkedin_profile_url do %>
            Your linkedin profile URL <span class="text-danger">*</span>
          <% end %>
          <%= f.text_field :linkedin_profile_url, value: @referral.linkedin_profile_url || @last_referral&.linkedin_profile_url,class: "form-control", placeholder: "https://www.linkedin.com/in/johnsmith", required: "true", autocomplete: "off" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <%= f.label :yoe do %>
          Years of experience <span class="small text-ghost">optional</span>
        <% end %>
        <div class="input-group mb-3">
          <%= f.number_field :yoe, value: @referral.yoe || @last_referral&.yoe, class: "form-control", placeholder: "4" %>
          <div class="input-group-append">
            <span class="input-group-text" id="offer_yoe">year(s)</span>
          </div>
        </div>
      </div>
    </div>


    <%= f.submit "Submit this referral request", class: "btn btn-block btn-success" %>
    <small class="form-text text-muted">By submitting this form, you agree to disclose its information to the person who will make the referral.</small>
    <%= f.submit "Go Back", name: "back_button", class: "btn btn-sm btn-block btn-link" %>
  </div>
</div>
