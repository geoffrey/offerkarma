<div class="text-center homepage-header p-4 bg-dark">
  <div class="text-white">
    <div class="mb-2 lead">
      Request a referral
    </div>

    <div class="font-weight-light">
      Let's start with the position.
    </div>
  </div>
</div>
<div class="bg-light p-4">
  <div class="center-box-max-width">
    <div class="progress mb-4">
      <div class="progress-bar bg-danger" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>
  <div class="center-box-max-width bg-white card-shadow rounded p-4">
    <div class="row">
      <div class="col">
        <div class="form-group">
          <%= f.label :company_name do %>
            Company <span class="text-danger">*</span>
          <% end %>
          <%= f.text_field :company_name, value: (params[:company_name] || @referral.company&.name)&.humanize, class: "form-control", placeholder: "Google", required: "true", autocomplete: "off" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :location do %>
            Location <span class="text-danger">*</span>
          <% end %>
          <%= f.text_field :location, class: "form-control", placeholder: "San Francisco", required: "true", autocomplete: "off" %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :position do %>
            Position <span class="text-danger">*</span>
          <% end %>
          <%= f.text_field :position, class: "form-control", placeholder: "Software Engineer", required: "true", autocomplete: "off" %>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col">
        <div class="form-group">
          <%= f.label :job_posting_url do %>
            Job posting URL <span class="small text-ghost">optional</span>
          <% end %>
          <%= f.text_field :job_posting_url, class: "form-control", placeholder: "https://careers.google.com/jobs", autocomplete: "off" %>
          <small class="form-text text-muted">Adding a link to the job post will increase your chances of getting referred.</small>
        </div>
      </div>
    </div>


    <%= f.submit "Next >", class: "btn btn-block btn-danger" %>

  </div>
</div>

<script type="text/javascript">
  $(function() {
    OfferKarma.setCompanyNameAutocomplete('#referral_company_name')
  })
</script>
