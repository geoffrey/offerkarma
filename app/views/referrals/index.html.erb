<div class="text-center homepage-header p-4 bg-dark">
  <div class="mb-4 lead">
    <span class="bg-white p-2 font-weight-bold">Need a referred at your dream company?</span>
  </div>
  <div>
    <a class="btn btn-danger" href="<%= new_referral_path %>">Get a referral</a>
  </div>
</div>

<div class="text-center p-3 border-bottom">
  <div class="container p-0">
    <div class="mb-3 text-center">Get a referral at one of these companies</div>

    <div class="row">
      <% @companies.each do |company| %>
        <div class="col-4 col-xl-2 p-3">
          <a href="<%= company_path company.uuid %>"><img width="65" class="rounded" src="<%= company.logo_url %>" alt="<%= company.display_name %> logo" title="<%= company.name %>"></a>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="bg-light p-3 border-bottom">
  <div class="container p-2">
    <h4>
      <% if @referrals.any? %>
        <%= @referrals.count %> referrals
      <% else %>
        No referrals found.
      <% end %>
    </h4>

    <div class="row">
      <% @referrals.each do |referral| %>
        <%= render partial: "referral_list_item", locals: { referral: referral } %>
      <% end %>
    </div>
  </div>
</div>
