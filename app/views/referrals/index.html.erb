<div class="text-center homepage-header p-4 bg-dark">
  <div class="mb-2 lead">
    <span class="text-white">Want to work for your dream company?</span>
  </div>
  <div>
    <a class="btn btn-danger" href="<%= new_referral_path %>">ğŸ¤Request a referral</a>
  </div>
</div>

<div class="text-center p-3 border-bottom">
  <div class="container p-0">
    <%= render "filters", search_path: "/referrals"  %>
  </div>
</div>

<div class="bg-light p-3 border-bottom">
  <div class="container p-2">
    <h4 class="text-center">
      <% if @referrals.any? %>
        <%= @referrals.total_count %> referral <%= "request".pluralize(@referrals.total_count) %>
      <% else %>
        No referrals found.
      <% end %>
    </h4>

    <%= paginate @referrals %>

    <div class="row">
      <% @referrals.each do |referral| %>
        <%= render partial: "referral_list_item", locals: { referral: referral } %>
      <% end %>
    </div>

    <%= paginate @referrals if @referrals.total_count > 9 %>
    </div>
  </div>
</div>
