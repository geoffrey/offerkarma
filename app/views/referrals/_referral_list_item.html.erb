<div class="col-lg-4 col-md-6 col-12 p-2 d-flex">
  <a href="<%= referral_path referral.uuid %>" class="list-group-item list-group-item-action p-0 rounded card-shadow border-0 bg-white">
    <div class="d-flex flex-column justify-content-between height-100">
      <div class="p-3 d-flex align-items-center">
        <div class="mr-3">
          <div class="mb-1">
            <img width="60" class="rounded border-0" src="<%= referral.company.logo_url %>" alt="<%= referral.company.display_name %> logo">
          </div>
        </div>

        <div class="text-truncate">
          <div title="<%= referral.position %>">
            <div class="text-truncate">
              <%= referral.company.display_name %>
            </div>
            <div class="text-truncate">
              <b><%= referral.position %></b>
            </div>
          </div>
          <div class="small">
            <span class="text-muted">
              <%= referral.location %>
            </span>
            <%= referral.yoe ? "(#{referral.yoe} YOE)" : "" %>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
