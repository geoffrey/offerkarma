<div class="text-center company-header p-4 bg-dark text-white">
  <h2 class="font-weight-light"><%= @company.name.humanize %></h2>

  <div class="mb-2">
    <img width="80px" class="img-thumbnail rounded" src="//logo.clearbit.com/<%= @company.domain %>">
  </div>

  <div>
    <a href="//<%= @company.domain %>" target="_blank" class="text-white"><%= @company.domain %></a>
  </div>

  <% if @company.public? %>
    <hr/>
    <div>
      <a href="<%= @company.yahoo_finance_url %>" class="text-white" target="_blank">$<%= @company.symbol.upcase %>: <%= @company.quote %></a>
    </div>
  <% end %>
</div>

<div class="bg-light p-3 border-bottom">
  <div class="container p-0">
    <% if @offers.any? %>
      <div class="row">
        <% @offers.each do |offer| %>
          <div class="col-lg-4 col-md-6 col-12 p-2">
            <div class="border rounded list-group-item-action">
              <a href="<%= offer_path offer.uuid %>" class="list-group-item-action">
                <%= render partial: "offers/offer_list_item", locals: { offer: offer } %>
              </a>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white p-3 text-center">
        <div class="lead mb-3">
          We do not have any offer for <b><%= @company.name %> </b> yet
        </div>

        <a href="<%= new_offer_path %>" class="btn btn-danger">Evaluate a <%= @company.name %> offer</a>
      </div>

    <% end %>
  </div>
</div>
